#include <stdio.h>

struct student
{
    int rollno;
    char name[50];
    int mark1, mark2, mark3;
    int total;
    float average;
};

int main()
{
    struct student s;

    printf("Enter Roll Number: ");
    scanf("%d", &s.rollno);

    printf("Enter Name: ");
    scanf("%s", s.name);

    printf("Enter Mark 1: ");
    scanf("%d", &s.mark1);

    printf("Enter Mark 2: ");
    scanf("%d", &s.mark2);

    printf("Enter Mark 3: ");
    scanf("%d", &s.mark3);
    s.total = s.mark1 + s.mark2 + s.mark3;
    s.average = s.total / 3.0;

    printf("\n--- Student Details ---\n");
    printf("Roll Number : %d\n", s.rollno);
    printf("Name        : %s\n", s.name);
    printf("Mark 1      : %d\n", s.mark1);
    printf("Mark 2      : %d\n", s.mark2);
    printf("Mark 3      : %d\n", s.mark3);
    printf("Total Marks : %d\n", s.total);
    printf("Average     : %.2f\n", s.average);

    return 0;
}
